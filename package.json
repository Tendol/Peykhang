{
  "name": "app",
  "private": true,
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/typescript": "^4.1.1",
    "@graphql-codegen/typescript-react-apollo": "^4.3.2",
    "esbuild": "^0.24.0"
  },
  "scripts": {
    "gen-schema": "bundle exec rails graphql:schema:idl",
    "clean:generated": "rm -rf app/javascript/generated",
    "gen-types": "yarn clean:generated && graphql-codegen --config codegen.ts",
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --loader:.jpeg=file --loader:.jpg=file --loader:.png=file"
  },
  "dependencies": {
    "@apollo/client": "^3.11.8",
    "@graphql-codegen/near-operation-file-preset": "^3.0.0",
    "@graphql-codegen/typescript-operations": "^4.3.1",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.12",
    "@rails/actiontext": "^8.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.7",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "antd": "^5.21.5",
    "apollo-client": "^2.6.10",
    "graphql": "^16.9.0",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-barcode": "^1.5.3",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0",
    "trix": "^2.1.8",
    "typescript": "^5.6.3"
  }
}
